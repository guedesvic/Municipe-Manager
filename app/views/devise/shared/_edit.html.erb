<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Editando Perfil</h1>
  </div>
</div>

<% admin = current_admin %>

<div class="row">
  <% if admin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <ul>
        <% admin.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_for(admin, url: registration_path(admin), html: { method: :put }) do |form| %>
              <div class="form-group">
                <%= form.label :email %>
                <%= form.email_field :email, class:"form-control", autocomplete: "email" %>
              </div>
              <div class="form-group">
                <%= form.label :password %> <i>(deixe em branco caso nao deseje alterar)</i><br />
                <%= form.password_field :password, class:"form-control", autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> Minimo de caracteres</em>
                <% end %>
              </div>
              <div class="form-group">
                <%= form.label :password_confirmation %>
                <%= form.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
              </div>
              <div class="form-group">
                <%= form.label :current_password %> <i>(precisamos da sua senha atual para confirmar as alteracoes)</i><br />
                <%= form.password_field :current_password, class:"form-control", autocomplete: "current-password" %>
              </div>
              <button type="submit" class="btn btn-success">
                Atualizar
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>