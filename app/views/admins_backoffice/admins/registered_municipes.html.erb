<nav class="navbar navbar-light bg-light">
  <h3>Municipes</h3>
  <%= form_with(url:admins_backoffice_admins_search_path, local: true, method: :get, class:"form-inline") do |form|%>
    <%= form.text_field :term, class:"form-control mr-sm-2", placeholder:"Pesquisar" %>
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
  <% end %>
</nav>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Nome</th>
        <th>E-mail</th>
        <th>CPF</th>
        <th>CNS</th>
        <th>Nascimento</th>
        <th>Telefone</th>
        <th>Status</th>
        <th>Recebe e-mails</th>
        <th>Municipio</th>
        <th>Editar</th>
      </tr>
    </thead>
    <tbody>
      <% @municipes.each do |municipe| %>
        <tr>
          <td><%= municipe.id %></td>
          <td><%= municipe.nome %></td>
          <td><%= municipe.email %></td>
          <td><%= municipe.cpf %></td>
          <td><%= municipe.cns %></td>
          <td><%= municipe.data_nascimento %></td>
          <td><%= municipe.telefone %></td>
          <td><%= municipe.status %></td>
          <td><%= municipe.receber_emails %></td>
          <td><%= municipe.municipio.nome %></td>
          <td style="width: 100px">
            <%= link_to admins_backoffice_path(municipe), class:"btn btn-primary btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @municipes %>
</div>